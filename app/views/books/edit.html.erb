<h1>Editing Book</h1>
<%=form_with model: @list, url: update_path(@list.id), method: :patch do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit'Update Book' %>

  <td><%= link_to 'Show', show_path(@list.id) %></td>
  <td><%= link_to 'Back', "/books" %></td>

<% end %>