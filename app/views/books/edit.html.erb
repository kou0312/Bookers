<h1>Editing Book</h1>
<%=form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>

  <% if @book.errors.any? %>
    <div id="errors_explanation">
      <h2 class="error"><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

    <div class="field">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>

    <div class="field">
      <%= f.label :body %>
      <%= f.text_area :body %>
    </div><br>

    <div class="actions">
      <input type="submit" name="commit" value="Update Book" data-disable-with="Update Book">
    </div>
<% end %>

  <td><%= link_to 'Show', book_path(@book) %></td>
   |
  <td><%= link_to 'Back', books_path %></td>

